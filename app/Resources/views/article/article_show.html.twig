{% extends "adminLayout.html.twig" %}

{% block stylesheets %}

{{parent()}}

    <link href="{{asset('adminTemplate/css/plugins/slick/slick.css')}}" rel="stylesheet">
    <link href="{{asset('adminTemplate/css/plugins/slick/slick-theme.css')}}" rel="stylesheet">

    <link href="{{asset('adminTemplate/css/animate.css')}}" rel="stylesheet">
    <link href="{{asset('adminTemplate/css/style.css')}}" rel="stylesheet">

{% endblock %}

{% set breadCrumbPosition = "Articles" %}
{% set breadcrumbs = ['Details'] %}

{%block body%}

<div class="gray-bg">
        
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-12">
                <h2>Detail article</h2>
                
            </div>
            <div class="col-lg-2">

            </div>
        </div>

        <div class="wrapper wrapper-content animated fadeInRight">

            <div class="row">
                <div class="col-lg-12">

                    <div class="ibox product-detail">
                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-md-5">


                                    <div class="product-images">

                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{article.source1}}" alt="image 1">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{article.source2}}" alt="image 2">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{article.source3}}" alt="image 3">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{article.source3}}" alt="image 4">
                                            </div>
                                        </div>


                                    </div>

                                </div>
                                <div class="col-md-7">

                                    <h2 class="font-bold m-b-xs">
                                        Nom de l'article
                                    </h2>
                                    <p>{{article.designation}}</p>
                                    <h3 class="font-bold m-b-xs">
                                        Prix
                                    </h3>
                                    <div class="m-t-md">
                                        <h2 class="product-main-price">{{article.defaultPrice}} f cfa</h2>
                                    </div>

                                    <h3 class="font-bold m-b-xs">
                                        Stock
                                    </h3>
                                    <div class="m-t-md">
                                        <h2 class="product-main-price">{{article.stock}}</h2>
                                    </div>
                                    <hr>

                                    <h4>Product description</h4>

                                    <div class="small text-muted">
                                        {{article.description}}
                                    </div>
                                    
                                    <hr>

                                </div>
                            </div>

                        </div>
                        
                    </div>

                </div>
            </div>

        </div>
        <div class="footer">
            <div class="pull-right">
                10GB of <strong>250GB</strong> Free.
            </div>
            <div>
                <strong>Copyright</strong> Example Company &copy; 2014-2017
            </div>
        </div>

    </div>


{%endblock%}

{% block javascripts %}
{{parent()}}

<script src="{{asset('adminTemplate/js/plugins/metisMenu/jquery.metisMenu.js')}}"></script>
<script src="{{asset('adminTemplate/js/plugins/slimscroll/jquery.slimscroll.min.js')}}"></script>

<!-- Custom and plugin javascript -->
<script src="{{asset('adminTemplate/js/inspinia.js')}}"></script>
<script src="{{asset('adminTemplate/js/plugins/pace/pace.min.js')}}"></script>

<!-- slick carousel-->
<script src="{{asset('adminTemplate/js/plugins/slick/slick.min.js')}}"></script>

<script>
    $(document).ready(function(){


        $('.product-images').slick({
            dots: true
        });

    });

</script>


{% endblock %}
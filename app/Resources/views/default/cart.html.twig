{% extends 'base-shop.html.twig' %}



{% block header %}
		<!-- Purple Header -->
	<div class="edge-header deep-purple"></div>

	<!-- Main Container -->
	<div class="container free-bird">
	  	<div class="row">
		    <div class="col-md-12 col-lg-12 mx-auto float-none white z-depth-1 py-2 px-2">

				<!--Naked Form-->
				<div class="card-body">
					<h2 class="h2-responsive"><strong> Mon panier / R&eacute;capitulatif de la commande  </strong></h2>
				</div>
				<!--Naked Form-->
		    </div>
	  	</div>
	</div>
<!-- /.Main Container -->

{% endblock %}

{% block body %}

 <!--Main layout-->
  <main class="mt-5 pt-0">
    <div class="container-fluid">

      <!-- Heading -->

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-md-10 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
            <div class="card-body">

				<div class="col-xs-12">

					{% if not app.user %}
					<!-- <h5> Veuillez vous connecter pour générer la proforma <a target="_blank" href="{{ path('proceed_proforma') }}"> Connexion </a> </h5>  -->
					{% endif %}
					<div class="table-responsive table-one margin-minus section-padding-bottom">


						<table class="table text-center">
							<thead>
								<tr>
									<th  colspan="2"></th>
									<th class="alert-info">Quantit&eacute;</th>
									<th class="alert-info">Total</th>
									<th class="alert-info">&nbsp;</th>
								</tr>
							</thead>
							<tbody>
								{% for order in cart|reverse %}
									<tr class="border py-0" id="order-{{ order.article.id }}">
										<td class="td-img text-left">
											<a href="#">
												<img style="width: 100px;" src="{{ order.article.source1 }}" alt="#" />
											</a>
										</td>
										<td class="text-left" style="vertical-align: top;"> 
											<div class="items-dsc">
												<ul style="list-style: none;"> 
													<h5> {{ order.article.designation }} </h5>
													<li> {{ order.article.description }} </li>
													<li> {% if order.price is defined %} </li>
														{% set pu = order.price %} 
													{% else %} 
														{% set pu = order.article.defaultPrice %} 
													{% endif %}

													<li> PU : {{ pu }} </li>
													
												</ul>
												
												<form action="#" class="ajaxForm" method="POST">
													<div class="plus-minus">
														<input id="order-nbr-{{ order.article.id }}" readonly="readonly" type="hidden" value="{{ order.nbr }}" name="qty" class="plus-minus-box">
													</div>
												</form>
											</div>
										</td>
										
										<td>
											<form action="{{ path('remove_from_cart', {'article':order.article.id}) }}" class="ajaxForm" method="POST">
												<div class="plus-minus">
													<button class="dec qtybutton btn btn-warning p-1 btn-ghost phantom" type="submit">
														<i class="fas fa-times"></i>
													</button>
												</div>
											</form>
											
											<span id="span-order-nbr-{{ order.article.id }}"> {{ order.nbr }} </span>

											<form action="{{ path('add_to_cart', {'article':order.article.id}) }}" class="ajaxForm" method="POST">
												<div class="plus-minus">
													<button class="inc qtybutton btn btn-default p-1 btn-ghost phantom" type="submit">
														<i class="fas fa-plus"></i>
													</button>
												</div>
											</form>
										</td>
										<td > <span id="total-order-{{ order.article.id }}"> {{ (order.nbr * pu)|number_format(0, '.', ' ') }} FCFA</span>  
											<form action="{{ path('remove_order', {'article':order.article.id}) }}" class="removeOderForm" method="POST">
													<button class="btn btn-danger p-1 btn-ghost phantom" type="submit"><i class="fa fa-trash" title="Remove this product"></i> Annuler </button>
												</form>
										</td>
										
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
            </div>

          </div>
          <!--/.Card-->

        </div>
        <!--Grid column-->

		<!--Grid column-->
        <div class="col-md-2 mb-4">
			

			<h4 class="d-flex justify-content-between align-items-center mb-3">
	            <span class="text-muted">Articles : </span>
	            <span id="invoice-nbr-aticles" class="badge badge-secondary badge-pill"> {{ nbrCart }} </span>
	        </h4>
	        <h4 class="d-flex justify-content-between align-items-center mb-3">
	            <span class="text-muted">Total : </span>
	            <span id="invoice-amount" class="badge badge-secondary badge-pill">{{ cartAmount }} </span>
	        </h4>
          	<!-- Heading -->
			<h4 class="d-flex justify-content-between align-items-center mb-3">
				<a href="{{ path('proceed_proforma') }}" class="btn btn-info btn-lg"> commander	 </a>

			</h4>
         </div>
		


      </div>
      <!--Grid row-->

    </div>
  </main>
  <!--Main layout-->





<section class="cart-page section-padding">
	<div class="container">
		<div class="row">
			
		</div>
	</div>
</section>
{% endblock %}


{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript">
		initAjaxForm();
		function initAjaxForm()
        {
            $('body').on('submit', '.ajaxForm', function (e) {
                e.preventDefault();
                $.ajax({
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    data: $(this).serialize()
                })
                .done(function (data) {
                	console.log(data);
                    if (typeof data !== 'undefined') {
                    	if (typeof data['article'] !== 'undefined') {
                        	$('#order-nbr-' + data['article'] ).val(data['nbrOrder']);
                        	$('#span-order-nbr-' + data['article'] ).html(data['nbrOrder']);
                        	$('#cart-length').html(data['nbrCart']);
                        	$('#total-order-' + data['article']).html( data['orderAmount'] );
                        	$('#invoice-nbr-aticles').html( data['nbrCart'] );
                        	$('#invoice-amount').html( data['cartAmount'] );
                    	}
                    }
                });
            });

            $('body').on('submit', '.removeOderForm', function (e) {
                e.preventDefault();
                $.ajax({
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    data: $(this).serialize()
                })
                .done(function (data) {
                	console.log(data);
                    if (typeof data !== 'undefined') {
                    	if (typeof data['article'] !== 'undefined') {
                        	$('#order-' + data['article'] ).remove();
                        	$('#cart-length').html(data['nbrCart']);
                    	}
                    }
                });
            });
        }
	</script>

{% endblock %}
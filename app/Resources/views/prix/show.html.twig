{#{% extends 'base.html.twig' %}#}

{% block body %}
    <h1>Prix</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prix.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ prix.montant }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if prix.dateDebut %}{{ prix.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if prix.dateFin %}{{ prix.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prix_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prix_edit', { 'id': prix.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

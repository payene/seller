{% extends "adminLayout.html.twig" %}
{% set breadCrumbPosition = "Categories" %}
{% set breadcrumbs = ['Liste'] %}


{% block stylesheets %}
{{parent()}}

    <!-- FooTable -->
    <link href='{{asset("adminTemplate/css/plugins/footable/footable.core.css")}}' rel="stylesheet">

    <link href='{{asset("adminTemplate/css/animate.css")}}' rel="stylesheet">
    <link href='{{asset("adminTemplate/css/style.css")}}' rel="stylesheet">

{% endblock %}

{% block body %}


    
    <section class="product-content section-padding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <h2> Les rayons </h2>
                    <a href="{{ path('category_new') }}"><i class="fa fa-plus"></i>Ajout categorie</a>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                            <tr>

                                <th data-toggle="true">Designation</th>
                                <th data-hide="all">Cat&eacute;goies</th>
                                
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                            </thead>
                            <tbody>
                            
                            {% for rayon in rayons %}

                                <tr>
                                <td>
                                   {{ rayon.catname }}
                                </td>
                                
                                <td>
                                   {% for sousCat in rayon.categories %}
                                        {{ sousCat.catname}}({{sousCat.articles|length }}) / 
                                   {% endfor %}
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        
                                        <a href="{{ path('category_edit',{id : rayon.id}) }}"><button class="btn-white btn btn-xs">Modifier</button></a>
                                        <a href="{{ path('category_delete',{id : rayon.id}) }}"><button class="btn-white btn btn-xs">Supprimer</button></a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                            
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                            </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>









    <section class="product-content section-padding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <h2>Liste des categories</h2>
                    <a href="{{ path('category_new') }}"><i class="fa fa-plus"></i>Ajout categorie</a>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                            <tr>

                                <th data-toggle="true">Designation</th>
                                <th data-hide="all">Description</th>
                                
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                            </thead>
                            <tbody>


                            {#% set category = categories[0] %}
                            {% for l in category.articles %}

                                {{ l.designation }}

                                {% endfor %#}
                                
                                {% for category in categories %}

                                <tr>
                                    <td>
                                       {{ category.catname }}
                                    </td>
                                    
                                    <td>
                                       {{ category.catdesc }}
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            
                                            <a href="{{ path('category_edit',{id : category.id}) }}"><button class="btn-white btn btn-xs">Modifier</button></a>
                                            <a href="{{ path('category_delete',{id : category.id}) }}"><button class="btn-white btn btn-xs">Supprimer</button></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                            </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>



   
{% endblock %}



{% block javascripts %}
    {{parent()}}


    <script src='{{asset("adminTemplate/js/plugins/footable/footable.all.min.js")}}'></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function() {

            $('.footable').footable();

        });

    </script>



    {% endblock %}
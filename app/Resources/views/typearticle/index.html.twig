{% extends "adminLayout.html.twig" %}

{% set breadCrumbPosition = "Type Articles" %}
{% set breadcrumbs = ['Liste'] %}

{% block body %}
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">

                         <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                            <tr>

                                <th data-toggle="true">Designation</th>
                                <th data-hide="phone">Categorie</th>
                                <th data-hide="all">Description</th>
                                <th data-hide="phone">Prix</th>
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for typeArticle in typeArticles %}
                            <tr>
                                <td>
                                {{ typeArticle.designation }}
                                </td>
                                <td>
                                    {{ typeArticle.category.catname }}
                                </td>
                                <td>
                                    {{ typeArticle.description }}
                                </td>
                                <td>
                                    {{ typeArticle.defaultPrice }}
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a href="{{ path('typearticle_show',{id : typeArticle.id}) }}"><button class="btn-white btn btn-xs">Voir</button></a>
                                        <a href="{{ path('typearticle_edit',{id : typeArticle.id}) }}"><button class="btn-white btn btn-xs">Modifier</button></a>
                                        {% if typeArticle.articles|length == 0 %}
                                        <a href="{{ path('typearticle_delete',{id : typeArticle.id}) }}"><button class="btn-danger btn btn-xs">Supprimer</button></a>                                        
                                    {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                            
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                            </tfoot>
                        </table>


                    </div>
                </div>
            </div>
        </div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src='{{asset("adminTemplate/js/plugins/footable/footable.all.min.js")}}'></script>
        <!-- Page-Level Scripts -->
        <script>
        $(document).ready(function() {

            $('.footable').footable();

        });
    </script>
{% endblock %}
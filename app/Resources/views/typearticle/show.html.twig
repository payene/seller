{% extends "adminLayout.html.twig" %}

{% block stylesheets %}

{{parent()}}

    <link href="{{asset('adminTemplate/css/plugins/slick/slick.css')}}" rel="stylesheet">
    <link href="{{asset('adminTemplate/css/plugins/slick/slick-theme.css')}}" rel="stylesheet">

    <link href="{{asset('adminTemplate/css/animate.css')}}" rel="stylesheet">
    <link href="{{asset('adminTemplate/css/style.css')}}" rel="stylesheet">

{% endblock %}

{% set breadCrumbPosition = "Types articles" %}
{% set breadcrumbs = ['Details'] %}

{%block body%}

<div class="gray-bg">
        
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-12">
                <h2>Detail type article</h2>
                
            </div>
            <div class="col-lg-2">

            </div>
        </div>

        <div class="wrapper wrapper-content animated fadeInRight">

            <div class="row">
                <div class="col-lg-12">

                    <div class="ibox product-detail">
                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-md-5">


                                    <div class="product-images">

                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{typeArticle.source1}}" alt="image 1">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{typeArticle.source2}}" alt="image 2">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{typeArticle.source3}}" alt="image 3">
                                            </div>
                                        </div>
                                        <div>
                                            <div class="image-imitation">
                                                <img src="{{typeArticle.source3}}" alt="image 4">
                                            </div>
                                        </div>


                                    </div>

                                </div>
                                <div class="col-md-7">

                                    <h2 class="font-bold m-b-xs">
                                        Nom du type article: {{typeArticle.designation}}
                                    </h2>
                                    <hr>
                                    <h2 class="font-bold m-b-xs">
                                        Prix: {{typeArticle.defaultPrice}} f cfa
                                    </h2>
                                    <hr>
                                    <h3 class="font-bold m-b-xs">
                                        Caractéristiques associées
                                    </h3>
                                    <div class="m-t-md well">
                                        {% for caracteristique in typeArticle.caracteristiques %}
                                        <h2 class="product-main-price">{{ caracteristique.libelle }}</h2>
                                        {% endfor %}
                                    </div>
                                    <hr>

                                    <h4>Description</h4>

                                    <div class="small text-muted">
                                        {{typeArticle.description}}
                                    </div>
                                    
                                    <hr>

                                </div>
                            </div>

                        </div>
                        
                    </div>

                </div>
            </div>

        </div>

    </div>


{%endblock%}

{% block javascripts %}
{{parent()}}

<script src="{{asset('adminTemplate/js/plugins/metisMenu/jquery.metisMenu.js')}}"></script>
<script src="{{asset('adminTemplate/js/plugins/slimscroll/jquery.slimscroll.min.js')}}"></script>

<!-- Custom and plugin javascript -->
<script src="{{asset('adminTemplate/js/inspinia.js')}}"></script>
<script src="{{asset('adminTemplate/js/plugins/pace/pace.min.js')}}"></script>

<!-- slick carousel-->
<script src="{{asset('adminTemplate/js/plugins/slick/slick.min.js')}}"></script>

<script>
    $(document).ready(function(){


        $('.product-images').slick({
            dots: true
        });

    });

</script>


{% endblock %}
{% extends "adminLayout.html.twig" %}

{% block stylesheets %}
    {{parent()}}

    <!-- FooTable -->
    <link href='{{asset("adminTemplate/css/plugins/footable/footable.core.css")}}' rel="stylesheet">

    <link href='{{asset("adminTemplate/css/animate.css")}}' rel="stylesheet">
    <link href='{{asset("adminTemplate/css/style.css")}}' rel="stylesheet">

{% endblock %}

{% block body %}

    <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2>Liste des fournisseurs</h2>
                <a href="{{ path('fournisseur_new') }}"><i class="fa fa-plus"></i>Ajout fournisseur</a>
            </div>
        </div>

        <div class="wrapper wrapper-content animated fadeInRight ecommerce">

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <div class="ibox-content">

                             <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                <thead>
                                <tr>
                                    <th data-hide="phone">Raison sociale</th>
                                    <th data-hide="phone">Adresse</th>
                                    <th data-hide="phone,tablet" >Telephone</th>
                                    <th data-hide="phone,tablet" >E-mail</th>
                                    <th data-hide="phone,tablet" >Utilisateur</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>

                                </tr>
                                </thead>
                                <tbody>

                                {% for fournisseur in fournisseurs %}

                                    <tr>
                                    <td>
                                       {{ fournisseur.raisoc }}
                                    </td>
                                   
                                    <td>
                                        {{ fournisseur.adresse }}
                                    </td>
                                    <td>
                                        {{ fournisseur.telephone }}
                                    </td>
                                    <td>
                                        {{ fournisseur.email }}
                                    </td>
                                    <td>
                                        {{ fournisseur.user.id }}
                                    </td>
                                   
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a href="{{ path('fournisseur_show',{id : fournisseur.id}) }}"><button class="btn-white btn btn-xs">Voir</button></a>
                                            <a href="{{ path('fournisseur_edit',{id : fournisseur.id}) }}"><button class="btn-white btn btn-xs">Modifier</button></a>
                                            <a href="{{ path('fournisseur_delete',{id : fournisseur.id}) }}"><button class="btn-white btn btn-xs">Supprimer</button></a>
                                            
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                                
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td colspan="6">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>






{% endblock %}

{% block javascripts %}
    {{parent()}}

<script src='{{asset("adminTemplate/js/plugins/footable/footable.all.min.js")}}'></script>

<!-- Page-Level Scripts -->
<script>
$(document).ready(function() {

    $('.footable').footable();

});

</script>



{% endblock %}
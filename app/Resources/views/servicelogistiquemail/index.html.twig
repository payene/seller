{% extends "adminLayout.html.twig" %}

{% set breadCrumbPosition = "Mails du service logistique" %}
{% set breadcrumbs = ['Liste'] %}

{% block body %}
<a href="{{ path('servicelogistiquemail_new') }}" class="btn btn-primary">Ajouter</a>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Email</th>
                            <th>Etat</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for serviceLogistiqueMail in serviceLogistiqueMails %}
                        <tr>
                            <td>{{ serviceLogistiqueMail.titre }}</td>
                            <td>{{ serviceLogistiqueMail.email }}</td>
                            <td>{% if serviceLogistiqueMail.actif %}<label class="badge badge-success">Activé</label>{% else %}<label class="badge badge-danger">Désactivé</label>{% endif %}</td>
                            <td>
                                <a href="{{ path('servicelogistiquemail_edit', { 'id': serviceLogistiqueMail.id }) }}">modifier</a>
                                <a href="{{ path('servicelogistiquemail_delete', { 'id': serviceLogistiqueMail.id }) }}" style="color: red;" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce mail');">supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

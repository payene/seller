{% extends "adminLayout.html.twig" %}


{% set breadCrumbPosition = "Mails du service logistique" %}
{% set breadcrumbs = ['Nouveau'] %}



{% block body %}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
            <a href="{{ path('servicelogistiquemail_index') }}"><i class="fa fa-list"></i>Liste</a>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight ecommerce">

        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1"> Ajout Mail service logistique</a></li>
                        </ul>
                        
                        <div class="tab-content">
                                <div class="panel-body">
                                    
                                    {{ form_start(form,{'multipart':'true'}) }}
                                    <fieldset class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">{{ form_label(form.titre) }}:</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.titre) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">{{ form_label(form.email) }}:</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.email) }}
                                            </div>
                                        </div>
                                        <div class="form-group"><label class="col-sm-2 control-label">Activer</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.actif) }}
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-push-2">
                                            <button type="submit" class="btn btn-primary">Ajouter</button>
                                        </div>
                                        
                                    </fieldset>
                                    {{ form_end(form) }}
                                </div>
                            
                        </div>
                        
                </div>
            </div>
        </div>

    </div>
{% endblock %}
